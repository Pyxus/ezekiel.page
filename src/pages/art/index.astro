---
import "@styles/global.css";
import art from "@data/art.json";
import SiteLayout from "@layouts/SiteLayout.astro";
import { Image } from "@astrojs/image/components";
---


  <SiteLayout title={"Art | Ezekiel Halley"}>
    <div class="w-full h-screen p-20">
      <div class="container lg:px-32 px-4 py-8 mx-auto items-center">
        <div class="grid grid-cols-5 grid-rows-2 grid-flow-col gap-2">
          {
            art.map((image) => {
              return (
                <div class="w-full">
                  <img
                    class="inset-0 h-full w-full object-cover object-center rounded opacity-75 hover:opacity-100"
                    height={image.height}
                    width={image.width}
                    src={image.link}
                    alt=""
                  />
                </div>
              );
            })
          }
          <div class="w-full row-auto col-span-2">
            <img
              class="inset-0 h-full w-full object-cover object-center rounded opacity-75 hover:opacity-100"
              height={500}
              width={500}
              src={"https://pyxus.dev/image/https%3A%2F%2Fs3-us-west-2.amazonaws.com%2Fsecure.notion-static.com%2F22bfde7d-c13e-4336-9a88-bcae9cb3c45f%2FClaudia.jpg?table=block&id=fa04097d-16c2-4101-976f-b0fcdbbd15c7&spaceId=0137bc6e-407e-4cca-88cd-8c14d7634ea7&width=2000&userId=&cache=v2"}
              alt=""
            />
          </div>
        </div>
      </div>
    </div>
  </SiteLayout>

